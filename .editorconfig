root = true

[*]
indent_style = space
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
max_line_length = 120

[*.gitignore]
end_of_line = lf

[*.{cs,csx}]
indent_size = 4

[*.cmd]
max_line_length = 9999

[*.sh]
end_of_line = lf
max_line_length = 9999
